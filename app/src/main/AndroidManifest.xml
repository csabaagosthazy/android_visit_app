<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp">

    <application
        android:name=".BaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFirstApp">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.BaseActivity"
            android:theme="@style/Theme.MyFirstApp" />
        <activity
            android:name=".ui.person.PersonActivity"
            android:label="@string/activityTitlePerson"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.person.PersonDetails"
            android:label="@string/title_activity_details"
            android:parentActivityName=".ui.person.PersonActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.person.PersonActivity" />
        </activity>
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/activityTitleSettings"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity
            android:name=".ui.visits.VisitsActivity"
            android:label="@string/activityTitleVisits"
            android:parentActivityName=".ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ui.MainActivity" />
        </activity>
        <activity android:name=".ui.visits.VisitDetails"
            android:label="@string/title_visit_details"
            android:parentActivityName=".ui.visits.VisitsActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.visits.VisitDetails" />
        </activity>
    </application>

</manifest>
